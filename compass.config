#
# Compass Configuration
#

# HTTP paths
http_path             = '/'
http_stylesheets_path = '/assets/css'
http_images_path      = '/assets/images'
http_javascripts_path = '/assets/js'

# File system locations
sass_dir              = 'assets/css'
css_dir               = 'public/assets/css'
images_dir            = 'public/assets/images'
javascripts_dir       = 'public/assets/js'

# Set to true for easier debugging
line_comments         = false

# CSS output style - :nested, :expanded, :compact, or :compressed
output_style          = :expanded

# Determine whether Compass asset helper functions generate relative
# or absolute paths
relative_assets       = true

# Learn more:
#   http://compass-style.org/docs/tutorials/configuration-reference/
